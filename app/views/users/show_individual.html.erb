<h1><%= @user_param %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @individual_user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%= @individual_user.id %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%= @user_param %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%= @individual_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

  <% @individual_user.own_photos.each do |photo_data| %>

  <tr>
      <td>
        <img src="<%= photo_data.image %>">
      </td>

      <td>
        <%= photo_data.poster.username %>
      </td>

      <td>
        <%= photo_data.caption %>
      </td>

      <td>
        <%= photo_data.updated_at %>
      </td>

      <td>
        <a href="/photos/<%= photo_data.id %>">
          Show details
        </a>
      </td>
    </tr>
  
  <% end %>

</table>
